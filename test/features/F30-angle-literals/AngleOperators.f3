/**
 * Exercize various operators on Angle.
 *
 * @author Stephen Chin <steveonjava@gmail.com>
 * @test
 * @run
 */

// angle addition
var r = 3deg + 2deg;
println("3deg + 2deg = {r}");

// angle subtraction
r = 5deg - 2deg;
println("5deg - 2deg = {r}");

// multiply by integer
r = 3deg * 2;
println("3deg * 2 = {r}");
// multiply by integer
r = 2 * 3deg;
println("2 * 3deg = {r}");

// multiply by number
r = 2rad * 2.5;
println("2rad * 2.5 = {r}");
// multiply by number
r = 2.5 * 2rad;
println("2.5 * 2rad = {r}");

// divide by integer
r = 3deg / 2;
println("3deg / 2 = {r}");

// divide by number
r = 2.5rad / 2.5;
println("2.5rad / 2.5 = {r}");

// divide by another angle
var ratio = 2.5deg/5.0deg;
println("2.5deg / 5.0deg = {ratio}");



